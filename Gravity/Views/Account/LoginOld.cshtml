<div class="text-center">

    <div class="">

        <div class="container">

            <div class="login-wrap" style="margin-top: 10px;">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="#">
                            <img src="~/images/icon/logo.png" alt="CoolAdmin">
                        </a>
                    </div>
                    <div style="color:red">@TempData["msg"]</div>
                    <div class="login-form">
                        @using (Html.BeginForm(FormMethod.Post,new { @class="stopAjax"}))
                        {
                            <div class="form-group">
                                <label>Email Address</label>
                                <input class="au-input au-input--full" required type="email" name="email" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input class="au-input au-input--full" required type="password" name="password" placeholder="Password">
                            </div>
                            <div class="login-checkbox">
                                <label>
                                    <input type="checkbox" name="remember">Remember Me
                                </label>
                                <label>
                                    <a href="/Account/ForgetPass">Forgotten Password?</a>
                                </label>
                            </div>
                            <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign in</button>

                        }
                            <div class="register-link">
                                <p>
                                    Don't you have account?
                                    <a href="/Account/Register">Sign Up Here</a>
                                </p>
                            </div>
                        </div>
                </div>
            </div>

        </div>

        </div>
</div>

<script>
    $(function () {
        $("form:last").validate();
    })
</script>
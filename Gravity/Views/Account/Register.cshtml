<div class="login-wrap">
    <div class="login-content">
        <div class="login-logo">
            <a href="#">
                <img src="~/images/icon/logo.png" alt="CoolAdmin">
            </a>
        </div>
        <div>@TempData["msg"]</div>
        <div class="login-form">
            @using (Html.BeginForm())
            {


                <div class="form-group">
                    <label>Email Address</label>
                    <input class="au-input au-input--full" required type="email" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input class="au-input au-input--full" required type="password" id="password" name="password" placeholder="Password">
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input class="au-input au-input--full" required type="password" id="confirmpassword" name="confirmpassword" placeholder="Confirm Password">
                </div>
                <div class="login-checkbox">
                    <label>
                        <input type="checkbox" required id="aggree" name="aggree"><a href="#">Terms & Policy </a> Agree the terms and policy
                    </label>
                </div>
                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit" id="btnRegister">Register</button>

            }
            <div class="register-link">
                <p>
                    Already have account?
                    <a href="/Account/Login">Sign In</a>
                </p>
            </div>
        </div>
    </div>
</div>

<script>
    $(function () {
        $("form:last").validate({
            rules: {
                password: {
                    minlength: 4
                },
                confirmpassword: {
                    equalTo: "#password"
                }
            }
        });
    })
</script>
            
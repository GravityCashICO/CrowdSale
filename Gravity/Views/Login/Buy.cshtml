<section>
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">

                <div class="col-lg-9">
                    <div class="card">
                        <div class="card-header">
                            <strong> Buy (GCH)</strong>
                        </div>
                        <div class="card-body card-block">
                            @using (Html.BeginForm())
                            {
                                
                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="email-input" class=" form-control-label">GCH Ammount</label>
                                    </div>
                                    <div class="col-12 col-md-3">
                                        <input type="number" id="amnt" name="amnt" placeholder="How many GCH Coin" class="form-control" />
                                        <small class="help-block form-text">Please enter your GCH amount</small>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="email-input" class=" form-control-label">Payment method</label>
                                    </div>
                                    <div class="col-12 col-md-3">
                                        <select name="code" required id="code" class="form-control">
                                            <option value="LTCT"> Litecoin Testnet</option>
                                            <option value="BTC">Bitcoin</option>
                                            <option value="ETH"> Ethereum</option>

                                        </select>
                                        <small class="help-block form-text">Please select a Payment method</small>
                                    </div>
                                </div>



                               


                                <div class="row form-group">
                                    <div class="col col-md-3">

                                    </div>
                                    <div class="col-12 col-md-9">
                                        <button id="" type="submit" class="btn btn-success">
                                            <i class="fa fa-location-arrow"></i> Pay
                                        </button>
                                    </div>
                                </div>


                            }

                        </div>

                    </div>








                </div>
            </div>
        </div>
</section>


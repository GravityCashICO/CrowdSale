<section>
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">

                <div class="col-lg-9">
                    <div class="card">
                        <div class="card-header">
                            <strong> Buy (GVCH)</strong>
                        </div>
                        <div class="card-body card-block">
                            @using (Html.BeginForm())
                            {

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="email-input" class=" form-control-label">GVCH Ammount</label>
                                    </div>
                                    <div class="col-12 col-md-3">
                                        <input type="number" id="amnt" name="amnt" placeholder="How many GVCH Coin" class="form-control" />
                                        <small class="help-block form-text">Please enter your GVCH amount</small>
                                        <small id="totalPrice"> </small>
                                    </div>
                                </div>

                                <div class="row form-group">
                                    <div class="col col-md-3">
                                        <label for="email-input" class=" form-control-label">Payment method</label>
                                    </div>
                                    <div class="col-12 col-md-3">
                                        <select name="code" required id="code" class="form-control">
                                            <option value="LTCT"> Litecoin Testnet</option>
                                            <option value="BTC">Bitcoin</option>
                                            <option value="ETH"> Ethereum</option>
                                            <option value="LTCT"> LiteCoin TestNet</option>

                                        </select>
                                        <small class="help-block form-text">Please select a Payment method</small>
                                    </div>
                                </div>






                                <div class="row form-group">
                                    <div class="col col-md-3">

                                    </div>
                                    <div class="col-12 col-md-9">
                                        <button id="" type="submit" class="btn btn-success">
                                            <i class="fa fa-location-arrow"></i> Pay
                                        </button>
                                    </div>
                                </div>


                            }

                        </div>

                    </div>








                </div>
            </div>
        </div>
    </div>
</section>
@{ 
    string url = TempData["url"]==null?"": System.Web.HttpUtility.UrlEncode(TempData["url"].ToString());
}
<script>
    var url = '@url';
    //url = url.replace(/&amp;/g, '&')
    //alert(url);
    $(function () {
        if (url != '') {
            //alert(url);
            window.location.href = "/Payment/Crypto?url=" + url;
        }
        var price=@Admin.CoinPrice;
        $('#amnt').keyup(function () {

            var amnt = $(this).val();
            var total = amnt * price;
            $('#totalPrice').html('<h6>Total Price:' + total + ' ETH</h2>');
        })
    })
</script>
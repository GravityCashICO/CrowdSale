<script>
        function func() {
            window.location.href = '/Payment/BuyCustom?amnt=' + $('#amnt').val() + '&code=' + $('#code').val();
            }

    $(function () {

        $('#amnt').keyup(function () {

        var percentage = 0;
        var amnt = $('#amnt').val();
			if (amnt > 2000)
			{
				percentage = 22;//22%
			}

			var amount = amnt;
			var coin = (1 / @Admin.CoinPriceUSD) * amount;
        var bonus = (coin * percentage) / 100;
        $('#coin').val(coin);
            $('#bonus').val(bonus);
            })
    })
</script>